{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "AllowedHosts": "*",

  /*
   * Ocelot Reverse Proxy API for WebSPA.
   * Configuration.
   */
  "ReRoutes": [
    // Store.API
    {
      "DownstreamPathTemplate": "/api/{version}/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "store-api",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/store/{version}/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    // Customer.API
    {
      "DownstreamPathTemplate": "/api/{version}/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "customer-api",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/customer/{version}/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    // Identity.API
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity-api",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/identity/{everything}",
      "UpstreamHttpMethod": []
    },
    // WebSPA Debug (1/2)
    {
      "DownstreamPathTemplate": "/WebSPA/",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "10.0.75.1",
          "Port": 4200
        }
      ],
      "UpstreamPathTemplate": "/WebSPA/",
      "UpstreamHttpMethod": []
    },
    // WebSPA Debug (2/2)
    {
      "DownstreamPathTemplate": "/WebSPA/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "10.0.75.1",
          "Port": 4200
        }
      ],
      "UpstreamPathTemplate": "/WebSPA/{everything}",
      "UpstreamHttpMethod": []
    }
  ],
  "GlobalConfiguration": {
    "RequestIdKey": "OcRequestId",
    "AdministrationPath": "/administration"
  }
}
